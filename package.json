{
    "name": "af-utils",
    "version": "0.1.0",
    "description": "Utility functions used within the af-XXXX Frameworks and Libraries",
    "main": "build/lib/index.js",
    "scripts": {
        "build": "npm test && ./node_modules/.bin/tsc",
        "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha",
        "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | coveralls"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts",
            "./build/**/*",
            "./node_modules/**/*",
            "./reports/**/*",
            "./test/**/*"
        ],
        "reporter": [
            "html",
            "lcov"
        ],
        "all": true,
        "report-dir": "./reports/coverage"
    },
    "author": "Acme Framework",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/acmeframework/af-utilities"
    },
    "dependencies": {
        "af-conditionals": "git+https://github.com/acmeframework/af-conditionals.git",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.4",
        "@types/node": "^10.12.5",
        "@types/sinon": "^5.0.5",
        "@types/uuid": "^3.4.4",
        "chai": "^4.2.0",
        "coveralls": "^3.0.2",
        "mocha": "^5.2.0",
        "mochawesome": "^3.1.1",
        "nyc": "^12.0.2",
        "sinon": "^6.3.5",
        "source-map-support": "^0.5.8",
        "ts-node": "^7.0.1",
        "typescript": "^3.1.6"
    }
}
