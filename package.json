{
  "name": "af-utilities",
  "version": "1.3.0",
  "description": "Utility functions used within the af-XXXX Frameworks and Libraries",
  "main": "dist/lib/index.js",
  "scripts": {
    "clean-dist": "npx rimraf dist",
    "clean-reports": "npx rimraf reports && npx rimraf .nyc_output",
    "clean-all": "npm run clean-dist && npm run clean-reports",
    "compile": " npx tsc",
    "dist": "npm run clean-all && npm test && npm run compile",
    "test": "TS_NODE_PROJECT='./test/tsconfig.json'  npx nyc mocha --config ./test/.mocharc.json --reporter-options reportDir='./reports/testing'",
    "coverage": "npx nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "include": [
      "src"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true,
    "report-dir": "./reports/coverage"
  },
  "author": "Michael Coakley <mcoakley@acmeframework.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acmeframework/af-utilities"
  },
  "bugs": {
    "url": "https://github.com/acmeframework/af-utilities/issues"
  },
  "homepage": "https://github.com/acmeframework/af-utilities",
  "dependencies": {
    "af-conditionals": "^1.2.0",
    "tslib": "^2.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "mochawesome": "^6.1.0",
    "nyc": "^15.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
